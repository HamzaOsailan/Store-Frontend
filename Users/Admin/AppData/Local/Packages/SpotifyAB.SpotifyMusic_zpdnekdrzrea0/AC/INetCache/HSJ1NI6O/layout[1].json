{
    "type": "AdaptiveCard",
    "rtl": false,
    "body": [
        {
            "type": "ColumnSet",
            "spacing": "None",
            "columns": [
                {
                    "type": "Column",
                    "width": "8px",
                    "spacing": "None",
                    "items": [
                        {
                            "type": "Container",
                            "spacing": "None"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "spacing": "None",
                    "items": [
                        {
                            "type": "TextBlock",
                            "wrap": true,
                            "maxLines": "${if($host.widgetSize == 'small', 1, 2)}",
                            "spacing": "None",
                            "size": "${$root.constants[$host.widgetSize].titleSize}",
                            "weight": "Bolder",
                            "text": "${$root.title}"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "8px",
                    "spacing": "None",
                    "items": [
                        {
                            "type": "Container",
                            "spacing": "None"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "spacing": "None",
            "minHeight": "${$root.constants[$host.widgetSize].tagLineSpacing}px"
        },
        {
            "$data": "${addProperty({}, 'pages', foreach(range(0, (count(sections) + (constants[$host.widgetSize].itemsPerPage-1))/constants[$host.widgetSize].itemsPerPage), i => addProperty({}, 'sections', subArray(sections,i*constants[$host.widgetSize].itemsPerPage,(i*constants[$host.widgetSize].itemsPerPage) + constants[$host.widgetSize].itemsPerPage >= count(sections) ? count(sections) : (i*constants[$host.widgetSize].itemsPerPage) + constants[$host.widgetSize].itemsPerPage))))}",
            "type": "Carousel",
            "loop": false,
            "initialPage": "${$root.initialPage}",
            "spacing": "None",
            "pages": [
                {
                    "type": "CarouselPage",
                    "spacing": "None",
                    "$data": "${pages}",
                    "items": [
                        {
                            "type": "Container",
                            "spacing": "None",
                            "minHeight": "${$root.constants[$host.widgetSize].rowHeight}px",
                            "$data": "${sections}",
                            "items": [
                                {
                                    "type": "Container",
                                    "spacing": "None",
                                    "minHeight": "${$root.constants[$host.widgetSize].rowSpacing}px"
                                },
                                {
                                    "type": "ColumnSet",
                                    "columns": [
                                        {
                                            "type": "Column",
                                            "width": "8px",
                                            "items": [
                                                {
                                                    "type": "Container",
                                                    "spacing": "None",
                                                    "minHeight": "${$root.constants[$host.widgetSize].rowHeight}px"
                                                }
                                            ],
                                            "spacing": "None"
                                        },
                                        {
                                            "type": "Column",
                                            "width": "auto",
                                            "items": [
                                                {
                                                    "type": "Image",
                                                    "size": "Small",
                                                    "width": "${$root.constants[$host.widgetSize].imageSize}px",
                                                    "height": "${$root.constants[$host.widgetSize].imageSize}px",
                                                    "url": "${imageUrl}",
                                                    "spacing": "None"
                                                }
                                            ],
                                            "spacing": "None"
                                        },
                                        {
                                            "type": "Column",
                                            "width": "stretch",
                                            "items": [
                                                {
                                                    "type": "Container",
                                                    "width": "stretch",
                                                    "spacing": "None",
                                                    "verticalContentAlignment": "Center",
                                                    "items": [
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "${if(state == 'playing', trackTitle, title)}",
                                                            "weight": "Bolder",
                                                            "spacing": "None",
                                                            "size": "Default",
                                                            "maxLines": "${if($host.widgetSize == 'small', 1, 2)}",
                                                            "wrap": true,
                                                            "horizontalAlignment": "Left",
                                                            "isSubtle": false
                                                        },
                                                        {
                                                            "type": "Container",
                                                            "spacing": "None",
                                                            "minHeight": "${$root.constants[$host.widgetSize].subtitleSpacing}px"
                                                        },
                                                        {
                                                            "type": "TextBlock",
                                                            "text": "${if(state == 'playing', 'Preview â€¢ ', 'Playlist')}${if(state == 'playing', trackArtist, '')}",
                                                            "spacing": "None",
                                                            "size": "Small",
                                                            "maxLines": 1,
                                                            "wrap": true,
                                                            "weight": "Default",
                                                            "isSubtle": true
                                                        }
                                                    ]
                                                }
                                            ]
                                        },
                                        {
                                            "type": "Column",
                                            "width": "8px",
                                            "items": [
                                                {
                                                    "type": "Container",
                                                    "spacing": "None",
                                                    "minHeight": "${$root.constants[$host.widgetSize].rowHeight}px"
                                                }
                                            ],
                                            "spacing": "None"
                                        },
                                        {
                                            "type": "Column",
                                            "width": "${$root.constants[$host.widgetSize].buttonSize}px",
                                            "items": [
                                                {
                                                    "type": "Image",
                                                    "height": "${$root.constants[$host.widgetSize].buttonSize}px",
                                                    "width": "${$root.constants[$host.widgetSize].buttonSize}px",
                                                    "url": "${if($host.hostTheme == 'light', if(state == 'playing', $root.constants.general.pauseButtonInvertedDark, $root.constants.general.playButtonInvertedDark), if(state == 'playing', $root.constants.general.pauseButtonInvertedLight, $root.constants.general.playButtonInvertedLight))}",
                                                    "horizontalAlignment": "Right",
                                                    "spacing": "None",
                                                    "forceLoad": true,
                                                    "selectAction": {
                                                        "type": "Action.Execute",
                                                        "title": "${if(state == 'paused', 'Play preview', 'Pause preview')}",
                                                        "verb": "${if(state == 'paused', 'play', 'pause')}",
                                                        "data": {
                                                            "id": "${id}"
                                                        }
                                                    }
                                                }
                                            ],
                                            "verticalContentAlignment": "Center",
                                            "$when": "${previewUrl != null}",
                                            "spacing": "None"
                                        },
                                        {
                                            "type": "Column",
                                            "width": "8px",
                                            "items": [
                                                {
                                                    "type": "Container",
                                                    "spacing": "None",
                                                    "minHeight": "${$root.constants[$host.widgetSize].rowHeight}px"
                                                }
                                            ],
                                            "spacing": "None"
                                        }
                                    ],
                                    "horizontalAlignment": "Left",
                                    "spacing": "None",
                                    "selectAction": {
                                        "$data": "{\"section\": ${jsonStringify($data)}, \"paused\": \"Open ${replace(title, '\"', '\\\"')} in Spotify\", \"playing\": \"${replace(trackTitle, '\"', '\\\"')} by ${replace(trackArtist, '\"', '\\\"')}\"}",
                                        "type": "Action.Execute",
                                        "title": "${if(json($data).section.state == 'paused', json($data).paused, json($data).playing)}",
                                        "verb": "row_click",
                                        "data": {
                                            "id": "${json($data).section.id}"
                                        }
                                    },
                                    "width": "stretch"
                                }
                            ],
                            "verticalContentAlignment": "Center"
                        }
                    ]
                }
            ],
            "height": "stretch"
        }
    ],
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "backgroundImage": {
        "url": "${if($host.hostTheme == 'light', $root.constants.general.lightBackground, $root.constants.general.darkBackground)}"
    }
}
